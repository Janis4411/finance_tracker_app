<div class="row">
  <div class="col-9">
    <table class="table table-dark table-hover">
    <thead>
        <tr>
          <th scope="col">First name</th>
          <th scope="col">Last name</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= link_to 'Stop following', friendship_path(friend), data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger", method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
